name: lua_check

on:
  push:
    branches:
      - master
      - lua_check
    tags:
      - "*"
  pull_request:
    branches:
      - master

  # Allows you to run this workflow manually from the Actions tab
  workflow_dispatch:

jobs:
  build:
    runs-on: ubuntu-latest

    steps:
      - uses: actions/checkout@v2

      - name: Install and run Luacheck
        uses: nebularg/actions-luacheck@v1
